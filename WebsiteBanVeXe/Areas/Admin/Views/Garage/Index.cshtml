@model IEnumerable<WebsiteBanVeXe.Models.Coach>

@{
    ViewBag.Title = "topic";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->


<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Quản lý Nhà xe </h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Quản Lý Nhà xe</li>
            </ol>
        </div>
    </div>
</div>
<section class=" ">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5">
                    <a class="text-white btn-sm btn-success" href="~/admin/garage/Create">Add Nhà xe <i class="fas fa-plus"></i></a>
                    <a class="text-white btn-sm btn-danger " href="~/admin/garage/trash">Thùng rác<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th width="30%">Tên Nhà xe</th>
                            <th width="20%">Hình ảnh</th>
                            <th>Mô tả</th>
                            <th>Địa chỉ</th>
                            <th width="20%">Chức Năng</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td><a class=" font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.name)</a></td>
                            <td><img width="50" src="~/public/images/flight/@Html.DisplayFor(modelItem => item.img)"></td>
                            <td><p class=" font-weight-bold card-link" > @Html.DisplayFor(modelItem => item.description)</p></td>
                            <td><p class=" font-weight-bold card-link "> @Html.DisplayFor(modelItem => item.address)</p></td>
                            <td>
                                @if (item.status == 1)
                                {
                                    <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "garage", new { id = item.id })"> <i class="fas fa-toggle-on"></i> </a>
                                }
                                else
                                {
                                    <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "garage", new { id = item.id })"> <i class="fas fa-toggle-off"></i> </a>
                                }
                                <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "garage", new { id = item.id })"> <i class="fas fa-trash-alt"></i></a>
                                <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "garage", new { id = item.id })">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="text-cam">@Html.DisplayFor(modelItem => item.id)</td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>
<script>
        $("#topic").addClass("active");
</script>
