@model WebsiteBanVeXe.Models.order
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}
<section class="booking">
    <div class="container bg-white">
        <div class="row">
            <div class="col-md-8">
                <div class="booking-confirmed booking-outer">
                    <div class="confirmation-title">
                        <div class="form-title form-title-1">
                            <h2 class="text-danger">Thông tin Đặt vé</h2>
                        </div>
                        <p class="text-success">Thông tin cụ thể đã được gửi tới email của bạn.</p>
                        <div class="payment-info detail">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="confirmation-details detail">
                                        <h3>Chi tiết Booking</h3>
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td class="title">Booking ID</td>
                                                    <td class="b-id">@Model.ID</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Tên khách hàng</td>
                                                    <td>@Model.name </td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Email</td>
                                                    <td>@Model.email</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">SDT</td>
                                                    <td>@Model.phone</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Số người</td>
                                                    <td>@Model.guestTotal</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Giới tính</td>
                                                    <td>@Model.gioitinh</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Quốc tịch</td>
                                                    <td>@Model.quoctich</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Lời nhắn</td>
                                                    <td>@Model.mess</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Ngày tạo</td>
                                                    <td>@Model.created_ate.ToString("dd-MM-yyy HH:mm tt")</td>
                                                </tr>
                                                @if (Model.StatusPayment == 1)
                                                {
                                                    <tr>
                                                        <td class="title">Trạng thái thanh toán</td>
                                                        <td>Đã thanh toán</td>
                                                    </tr>

                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td class="title">Trạng thái thanh toán</td>
                                                        <td>Chưa thanh toán vui lòng thanh toán lại.</td>
                                                    </tr>
                                                }
                                                <tr>
                                                    <td class="title">Phương thức thanh toán:</td>
                                                    <td>@Model.deliveryPaymentMethod.</td>
                                                </tr>
                                                <tr>
                                                    <td class="title">Tổng tiền:</td>
                                                    <td><h4 class="text-danger"> @Model.total.ToString("N0") VND</h4></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                @Html.Action("_BookingConnfig", "Checkout", new { orderId = Model.ID })
                <h3> Tổng tiền: @Model.total.ToString("N0") VND</h3>
            </div>
        </div>
    </div>
</section>