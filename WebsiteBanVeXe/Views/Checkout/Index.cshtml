                    <div class="payment-info detail">
                        <div class="row">
                            <div style="margin-left:20px;">
                                <h4 class="text-danger p-3"> Thông Tin Đặt Vé </h4>
                                <p>Loại vé</p>
                                @if (Model.Count() > 1)
                                {
                                    <p class="text-danger"> VÉ KHỨ HỒI </p>
                                }
                                else
                                {
                                    <p class="text-danger"> VÉ 1 CHIỀU </p>
                                }
                            </div>
                            @{ var sum = 0;}
                            @foreach (var item in Model)
                            {

                                <div class="col-md-6">

                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="title">Tổng tiền</td>
                                                <td class="b-id text-danger">@item.price.ToString("N0") VND</td>
                                            </tr>
                                            <tr>
                                                <td class="title">Thời gian xuất bến</td>
                                                <td> Ngày @item.departure_date.ToString("dd") / Tháng @item.departure_date.ToString("MM")  / Năm @item.departure_date.ToString("yyyy") ||  Lúc @item.departure_date.ToString("hh:mm tt")</td>
                                            </tr>
                                            <tr>
                                                <td class="title">Bến </td>
                                                <td>@item.departure_address</td>
                                            </tr>
                                            <tr>
                                                <td class="title">Nơi đến</td>
                                                <td>@item.arrival_address</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                sum += (int)item.price;
                            }
                            @{ sum = sum * (int)ViewBag.songuoi;
                            }
                            <h3 class="text-danger">Tổng tiền: @sum.ToString("N0") VND</h3>
                        </div>
